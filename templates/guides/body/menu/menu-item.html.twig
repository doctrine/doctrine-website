<li class="toc-item {%- if node.isCurrent %} opened {%- elseif node.isInRootline %} opened {% endif -%}">
    <a href="{{ url }}">{{ node.value.toString }}</a>
    {%~ if node.children|length %}
        <ul class="menu-level-{{ node.level }} {%- if node.isCurrent %} opened-ul {% endif -%}">
            {% for child in node.children -%}
                {{ renderNode(child) }}
            {% endfor %}
        </ul>
    {%- endif ~%}
    {%~ if node.sections|length %}
        <ul class="section-level-{{ node.level }} {%- if node.isCurrent %} opened-ul {% endif -%}">
            {% for subsection in node.sections -%}
                {{ renderNode(subsection) }}
            {% endfor %}
        </ul>
    {%- endif ~%}
</li>
